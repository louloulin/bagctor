{
  "name": "bactor-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:core && bun run build:agent",
    "build:core": "cd packages/core && tsc",
    "build:agent": "cd packages/agent && tsc",
    "test": "bun run test:all",
    "test:all": "bun run test:core && bun run test:agent",
    "test:core": "bun run --cwd packages/core test",
    "test:agent": "bun run --cwd packages/agent test",
    "clean": "bun run clean:all",
    "clean:all": "bun run clean:core && bun run clean:agent",
    "clean:core": "bun run --cwd packages/core clean",
    "clean:agent": "bun run --cwd packages/agent clean"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}