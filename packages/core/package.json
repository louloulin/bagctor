{
  "name": "@bactor/core",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "tsc -p tsconfig.json && mkdir -p dist/remote && cp -r src/remote/protos dist/remote/",
    "test": "bun test",
    "test:perf": "bun test src/tests/performance.test.ts",
    "example:hello": "bun run src/examples/helloworld.ts",
    "example:mood": "bun run src/examples/multibehaviors.ts",
    "example:remote": "bun run src/examples/remote.ts",
    "example:fun": "bun run src/examples/functional.ts",
    "example:lambda": "bun run src/examples/lambda.ts",
    "check": "bun run scripts/check.ts",
    "compile": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "fastq": "^1.18.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "bun-types": "latest",
    "typescript": "^5.3.3"
  }
} 