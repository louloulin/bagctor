{
  "name": "@bactor/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json --watch",
    "build": "rimraf dist tsconfig.tsbuildinfo && tsc -p tsconfig.json",
    "test": "NODE_ENV=test bun test src/tests/**/*.test.ts --config ./test.config.ts",
    "test:watch": "NODE_ENV=test bun test src/tests/**/*.test.ts --config ./test.config.ts --watch",
    "test:coverage": "NODE_ENV=test bun test src/tests/**/*.test.ts --config ./test.config.ts --coverage",
    "test:ci": "NODE_ENV=test bun test src/tests/**/*.test.ts --config ./test.config.ts --coverage --bail",
    "test:unit": "NODE_ENV=test bun test src/tests/unit/**/*.test.ts --config ./test.config.ts",
    "test:integration": "NODE_ENV=test bun test src/tests/integration/**/*.test.ts --config ./test.config.ts",
    "test:performance": "NODE_ENV=test bun test src/tests/performance/**/*.test.ts --config ./test.config.ts --timeout 10000",
    "clean": "rimraf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@bactor/common": "workspace:*",
    "fastq": "^1.15.0",
    "pino": "^8.17.0",
    "pino-pretty": "13.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "bun-types": "latest",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}