{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@testing/*": [
        "testing/*"
      ],
      "@monitoring/*": [
        "monitoring/*"
      ]
    },
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../remote"
    },
    {
      "path": "../common"
    }
  ]
}