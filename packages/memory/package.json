{
  "name": "@bactor/memory",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./kv-upstash": {
      "import": {
        "types": "./dist/kv/upstash.d.ts",
        "default": "./dist/kv/upstash.js"
      },
      "require": {
        "types": "./dist/kv/upstash.d.cts",
        "default": "./dist/kv/upstash.cjs"
      }
    },
    "./postgres": {
      "import": {
        "types": "./dist/postgres/index.d.ts",
        "default": "./dist/postgres/index.js"
      },
      "require": {
        "types": "./dist/postgres/index.d.cts",
        "default": "./dist/postgres/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "check": "bun run --bun tsc --noEmit",
    "build": "bun run rimraf dist tsconfig.tsbuildinfo && bun build ./src/index.ts --outdir=./dist --target=node --format=esm --external '*' && bun build ./src/index.ts --outfile=./dist/index.cjs --target=node --format=cjs --external '*'",
    "build:esm": "bun run rimraf dist tsconfig.tsbuildinfo && bun build ./src/index.ts --outdir=./dist --target=node --format=esm --external '*'",
    "build:watch": "bun build ./src/index.ts --outdir=./dist --target=node --format=esm --watch --external '*'",
    "test:integration": "cd integration-tests && pnpm run test",
    "test": "bun run vitest run",
    "lint": "eslint .",
    "clean": "bun run rimraf dist tsconfig.tsbuildinfo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bactor/agent": "workspace:^",
    "@upstash/redis": "^1.34.3",
    "ai": "^4.0.12",
    "pg": "^8.13.1",
    "pg-pool": "^3.7.0",
    "postgres": "^3.4.5",
    "redis": "^4.7.0",
    "rimraf": "6.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.49.2",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.10",
    "eslint": "^9.20.1",
    "tsup": "^8.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}