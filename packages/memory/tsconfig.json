{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "bun-types"
    ],
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "noResolve": true
  }
}